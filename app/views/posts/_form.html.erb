<%= form_for @post, html: { multipart: true } do |form| %>
  <p>
    <%= form.text_field :title, placeholder: 'Title' %>
  </p>
 
  <p>
    <%= form.text_area :body, placeholder: 'Body' %>
  </p>

  <p>
    <%= form.label :image %><br>
    <%= form.file_field :image %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
<% end %>